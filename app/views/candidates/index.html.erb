<h1>Listing candidates</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Middle name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Street address</th>
    <th>City</th>
    <th>State</th>
    <th>Resume</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidates.each do |candidate| %>
  <tr>
    <td><%= candidate.first_name %></td>
    <td><%= candidate.middle_name %></td>
    <td><%= candidate.last_name %></td>
    <td><%= candidate.email %></td>
    <td><%= candidate.phone %></td>
    <td><%= candidate.street_address %></td>
    <td><%= candidate.city %></td>
    <td><%= candidate.state %></td>
    <td><%= candidate.resume %></td>
    <td><%= link_to 'Show', candidate %></td>
    <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
    <td><%= link_to 'Destroy', candidate, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

